// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  
  profile      StudentProfile?
}

model StudentProfile {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique
  user      User    @relation(fields: [userId], references: [id])
  
  faculty   String  // Knowledge Domain
  mbti      String?
  disc      String?
  interests String[] // Stored as array of strings
}

model Job {
  id                Int      @id @default(autoincrement())
  slug              String   @unique // job_id
  title             String   // job_name
  category          String
  domain            String
  shortDescription  String   // short_description
  responsibilities  String[]
  hardSkills        String[]
  softSkills        String[]
  entryKpis         String[]
  tools             String[]
  learningPath      Json     // learning_path_3m
  internshipProject String   // internship_project
  archetypesFit     String[] // archetypes_fit
  marketFitScore    Json     // market_fit_score
  notes             String?

  // Legacy fields (kept for backward compatibility if needed, or can be mapped)
  // suitableFaculties String[]
  // suitableMBTI      String[]
  // suitableDISC      String[]
  // suitableInterests String[]
}
